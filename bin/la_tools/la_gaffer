#!/bin/bash

if [[ $IJ_OS == "mac" ]]; 
then 
    export gaffer_root=
    export ARNOLD_ROOT=
    export ocio_root=/mnt/luma_h/SITE/ocio
fi
if [[ $IJ_OS == "lin" ]]; 
then 
    export gaffer_root=/opt/gaffer/gaffer-0.59.1.0-linux-python2
    export ARNOLD_ROOT=/opt/htoa/arnold_6.2.0.0
    export ocio_root=/opt/OpenColorIO-Configs
fi

export OCIO=$ocio_root/aces_1.2/config.ocio
export PATH=$gaffer_root/bin:$ARNOLD_ROOT/bin:$PATH

export GAFFERAPPLESEED_HIDE_UI=1

case "$IJ_USER" in 
    nvermaak | neill )
        source ~/software/3delight-2.4.1/.3delight_bash
        ;;
esac         

gaffer $@
