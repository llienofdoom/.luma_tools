#!/bin/bash

aces_version=$(cat $IJ_LOCAL_REPO/etc/aces_version)

if [[ $IJ_OS == "mac" ]]; 
then 
    export nuke_root=/Applications/Nuke12.0v5/Nuke12.0v5.app/Contents/MacOS
    export NUKE_PATH=/opt/nuke_plugs/Cryptomatte/nuke:$NUKE_PATH
    export OCIO=/opt/OpenColorIO-Configs/$aces_version/config.ocio
fi
if [[ $IJ_OS == "lin" ]]; 
then 
    export nuke_root=/opt/Nuke12.0v5
    export NUKE_PATH=/opt/nuke_plugs/Cryptomatte/nuke:$NUKE_PATH
    export OCIO=/opt/OpenColorIO-Configs/$aces_version/config.ocio
fi

case "$IJ_USER" in 
    nvermaak | neill )
        $nuke_root/Nuke12.0 -nukex $@
        ;;
    * )
        $nuke_root/Nuke12.0 $@
        ;;
esac                                                                                           
