#!/bin/bash

if [[ $IJ_OS == "mac" ]]; 
then 
    export houdini_root=/Applications/Houdini/Current/Frameworks/Houdini.framework/Versions/Current/Resources
    export houdini_tools=''
    export arnold_root=~/htoa
    export ocio_root=/mnt/luma_h/SITE/ocio
fi
if [[ $IJ_OS == "lin" ]]; 
then 
    export houdini_root=/opt/houdini/hfs18.5.408
    export houdini_tools=/opt/houdini/tools
    export arnold_root=/opt/htoa
    export ocio_root=/opt/OpenColorIO-Configs
fi

pushd .
cd $houdini_root
. houdini_setup_bash

popd

export OCIO=$ocio_root/aces_1.2/config.ocio
export HOUDINI_OTLSCAN_PATH="/mnt/luma_i/assets/gen/tools/asset_lookdev_hda:/mnt/luma_i/assets/chr/tools:&"
export HOUDINI_OTLSCAN_PATH=/mnt/luma_i/assets/env/_tools:$HOUDINI_OTLSCAN_PATH

# ARNOLD
HTOA=$arnold_root"/htoa-5.5.0.1_r45f2926_houdini-18.5.408/htoa-5.5.0.1_r45f2926_houdini-18.5.408"
export HOUDINI_PATH="${HOME}/houdini${HOUDINI_MAJOR_RELEASE}.${HOUDINI_MINOR_RELEASE}:${HTOA}:${HFS}/houdini:&"

# qLib
export QLIB=$houdini_tools/qLib-0.2.185
export QOTL=$QLIB/otls

export HOUDINI_OTLSCAN_PATH=$QOTL/base:$QOTL/future:$QOTL/experimental:$HOUDINI_OTLSCAN_PATH:&
export HOUDINI_PATH=$QLIB:$HOUDINI_PATH

case "$IJ_USER" in 
    rob | mark )
        houdinifx $@
        ;;
    nvermaak | neill )
        . /home/neill@luma.local/software/3delight-2.3.9/.3delight_bash
        export HOUDINI_PATH=/home/neill@luma.local/software/3delight-2.3.9/Linux-x86_64/houdini/18.5:$HOUDINI_PATH
        houdinifx $@
        ;;
    * )
        houdinicore $@
        ;;
esac
