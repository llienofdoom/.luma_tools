#!/bin/bash

# name=$(basename $1)
# folder=$(dirname $1)
# base=${name%.*}
# ext=${name#$base.}
time=$(date "+%Y-%m-%d_%H-%M-%S")
mp4_name=$IJ_SHOT_NAME\_playblast\_$time.mp4
mp4_path=$IJ_SHOT_PATH/img/flip/$mp4_name

ffmpeg -y -i $1 -s 2048x1152 -filter_complex "[0:v]drawtext='fontcolor=white:font=sans-serif:fontsize=20:x=6:y=1050:text=[  [luma-film - 2020 - [inside job] [$IJ_DATE] - [$IJ_SHOT_NAME]:box=1:boxborderw=5:boxcolor=black'[LT]" -pix_fmt yuv420p -c:v libx264 -crf 25 -map "[LT]" $mp4_path
la_mrv $mp4_path


# -filter_complex "[0:v]drawtext='fontcolor=white:font=sans-serif:fontsize=20:x=6:y=1130:text=[[luma-film  -  2020  -  [inside job]   [$IJ_DATE][$IJ_SHOT_NAME]:box=1:boxborderw=5:boxcolor=black'[LT]" -map "[LT]" -map 1:a $HIP/img/camera/${IJ_SHOT_NAME}_mono.mp4