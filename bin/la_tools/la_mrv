#!/bin/bash

if [[ $IJ_OS == "mac" ]]; 
then 
    export mrv_root=/Applications/mrViewer.app/Contents/MacOS;
    export ocio_root=/mnt/luma_h/SITE/ocio
fi
if [[ $IJ_OS == "lin" ]]; 
then 
    export mrv_root="/usr/bin";
    export ocio_root=/opt/OpenColorIO-Configs
fi
export OCIO=$ocio_root/aces_1.2/config.ocio

$mrv_root/mrViewer $@
