#!/bin/bash

if [[ $IJ_OS == "mac" ]]; 
then 
    export blender_root=/Applications/Blender/2.90/Blender.app/Contents/MacOS;
    export ocio_root=/mnt/luma_h/SITE/ocio
    export OCIO=$ocio_root/aces_1.2/config.ocio

    $blender_root/Blender $@
fi
if [[ $IJ_OS == "lin" ]]; 
then 
    export blender_root=/opt/blender;
    export ocio_root=/opt/OpenColorIO-Configs
    export OCIO=$ocio_root/aces_1.2/config.ocio

    $blender_root/blender $@
fi
